<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/def_background"
    tools:context="com.kasuncreations.loginmgmt.RegisterActivity"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView3"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Enter The Student Details Below"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:typeface="serif"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="34dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_name"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/etRName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:textColor="#000000"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_uname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="12"
        app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/etRUname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Index No (Format ex:KUDCSD162018)"
            android:inputType="textPersonName"
            android:textColor="#000000"
            />

    </android.support.design.widget.TextInputLayout>




    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/etRPW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#000000"

            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_batch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/etRCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Batch"
            android:inputType="textPersonName"
            android:textColor="#000000"

            />

    </android.support.design.widget.TextInputLayout>
</LinearLayout>
    <Button
        android:id="@+id/btnReg"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="384dp"
        android:layout_height="55dp"
        android:text="Register"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:textSize="24sp"
        tools:layout_editor_absoluteY="412dp" />
</RelativeLayout>
